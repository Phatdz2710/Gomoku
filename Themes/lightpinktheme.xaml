    </Color>

    <core:Double x:Key="BlurRadius_Shadow_Double">10</core:Double>
    <core:Double x:Key="ShadowDeep_Shadow_Double">5</core:Double>
    <Thickness x:Key="BorderThickness_Cell_Double">0.2</Thickness>

    <CornerRadius x:Key="CornerRadius_Cell_Double">5.0</CornerRadius>

</ResourceDictionary>